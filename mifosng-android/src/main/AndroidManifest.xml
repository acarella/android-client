<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mifos.mifosxdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Mifosxactionbar" >
        <activity
            android:name="com.mifos.mifosxdroid.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mifos.mifosxdroid.LoginActivity"
            android:label="Login" />
        <activity
            android:name="com.mifos.mifosxdroid.online.LogoutActivity"
            android:label="@string/logout" />
        <activity
            android:name="com.mifos.mifosxdroid.online.DashboardFragmentActivity"
            android:label="Dashboard" >
        </activity>

        <activity android:name="com.mifos.mifosxdroid.online.ClientSearchActivity" />
        <activity
            android:name="com.mifos.mifosxdroid.ClientActivity"
            android:configChanges="orientation|screenSize" />

        <!-- PayGoSol activities -->
        <activity
            android:name="com.mifos.mifosxdroid.online.PGSAgentLoginActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".online.CreateClientActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.mifos.mifosxdroid.online.PGSClientActivity"
            android:label="PGSClientActivity">
            <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.mifos.mifosxdroid.online.DashboardFragmentActivity" />
        </activity>
        <!-- end PayGoSol activities -->
        
        <meta-data
            android:name="DATABASE"
            android:value="mifos.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.mifos.mifosxdroid.online.ClientActivity"
            android:label="@string/title_activity_client" >
        </activity>
    </application>

</manifest>
